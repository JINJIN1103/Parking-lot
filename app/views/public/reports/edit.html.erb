<div class="ml-5">
  <h2 class="mb-5">レポート編集</h2>
  <div>
    <%= form_with model:@report,  local:true do |f| %>
    <div class="form-group">
      <label for="レポート名前">レポート名前</label>
        <%= f.text_field :title_r %>
    </div>

    <div class="form-group">
      <label for="レポート内容">レポート内容</label>
        <%= f.text_area :introduction_r ,:size=>"100x3" %>
    </div>

    <div class="form-group">
      <td><%= f.label :カテゴリー %></td>
      <td><%= f.collection_select(:category_id, Category.where(customer_id: current_customer), :id, :name, :prompt => "選択してください" ) %></td>
    </div>

    <div class="form-group">
      <td><%= f.label :画像 %></td>
      <td><%= f.attachment_field :image, class: "form-control-file image" %></td>
   </div>
